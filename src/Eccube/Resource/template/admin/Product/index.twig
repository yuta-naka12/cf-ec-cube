            {% endif %}

            //select2 autofocus
            $(document).on('select2:open', (e) => {
                if (!$(e.target).attr('multiple')) {
                    document.querySelector('input.select2-search__field').focus();
                }
            });
        });

            // select2は検索しても自動で選択されないので、選択されている値を取得して選択する
