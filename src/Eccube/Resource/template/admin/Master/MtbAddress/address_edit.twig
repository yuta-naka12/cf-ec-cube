{% extends '@admin/default_frame.twig' %}

{% set menus = ['customer', 'mtb_address'] %}

{% block title %}{{ ''|trans }}{% endblock %}
{% block sub_title %}住所マスタ管理{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
<script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>
{% endblock javascript %}

{% block main %}
    <form name="member_form" role="form" id="member_form" class="h-adr" method="post" action="" novalidate>
        <span class="p-country-name" style="display:none;">Japan</span>
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8"><span class="card-title">{{ 'admin.setting.system.rank_registration'|trans }}</span></div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#memberInfo" aria-expanded="false" aria-controls="memberInfo">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="memberInfo">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>DCコード</span>
                                        <span class="badge badge-primary ml-1">{{ 'admin.common.required'|trans }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.dc_code) }}
                                        {{ form_errors(form.dc_code) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>コースマスター</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.CourseMaster) }}
                                        {{ form_errors(form.CourseMaster) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>留守宅率</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.absence_rate) }}
                                        {{ form_errors(form.absence_rate) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>配送週1</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.delivery_week_1) }}
                                        {{ form_errors(form.delivery_week_1) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>配送週2</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.delivery_week_2) }}
                                        {{ form_errors(form.delivery_week_2) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>計算項目</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.calculation_item) }}
                                        {{ form_errors(form.calculation_item) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>配送順序</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.delivery_index) }}
                                        {{ form_errors(form.delivery_index) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>配送者コード</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.driver_code) }}
                                        {{ form_errors(form.driver_code) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>詰込地区コード</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.packing_district_area_code) }}
                                        {{ form_errors(form.packing_district_area_code) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>倉庫出庫区分</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.warehouse_export_classification) }}
                                        {{ form_errors(form.warehouse_export_classification) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>索引</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.sort_no) }}
                                        {{ form_errors(form.sort_no) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink"
                               href="{{ url('admin_apply_pamphlet') }}">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                <span>{{ 'admin.customer.pamphlet.management'|trans }}</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="ex-conversion-action" class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">{{ 'admin.common.registration'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}




