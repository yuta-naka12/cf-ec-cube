{% extends 'default_frame.twig' %}

{% set body_class = 'pamphlet_form' %}

{% block main %}

      <div class="wrapper">
        <div class="breadcrumbs">
          <div class="breadcrumbs__page-title">
            <div class="breadcrumbs__page-title-image"><img src="/html/template/default/assets/img/icons/page-title-logo.png" alt=""></div>
            <div class="breadcrumbs__page-title-text">
              <div class="breadcrumbs__page-title-text-en">{{'front.pamphlet.subtitle'|trans}}</div>
              <div class="breadcrumbs__page-title-text-jp">{{'front.pamphlet.title'|trans}}</div>
            </div>
          </div>
          <div class="breadcrumbs__main"><a class="breadcrumbs__main-pagename breadcrumbs__main-pagename--inactive" href="https://captainfoods.co.jp/stg/shop/">{{'front.product.position_top'|trans}}</a>
            <div class="breadcrumbs__main-carret"><img src="/html/template/default/assets/img/icons/icon-arrow-right-red.svg" alt=""></div><span class="breadcrumbs__main-pagename">{{'front.pamphlet.title'|trans}}</span>
          </div>
        </div>
      </div>
      <section class="pamphlet">
        <div class="pamphlet__container"> 
          <p class="pamphlet__text">{{'front.pamphlet.text'|trans}}</p>
          <div class="pamphlet__progress"> 
            <div class="pamphlet__progress-item active">{{'front.pamphlet.step_item1'|trans}}</div>
            <div class="pamphlet__progress-item">{{'front.pamphlet.step_item2'|trans}}</div>
            <div class="pamphlet__progress-item">{{'front.pamphlet.step_item3'|trans}}</div>
          </div>
          <form class="form">
            <div class="form__list">
              <div class="form__item">
                <div class="form__label"> 
                  <label class="form__label-text">{{'front.pamphlet.name'|trans}}</label><span class="form__label-req">{{"front.pamphlet.req"|trans}}</span>
                </div>
                <div class="form__input-wrap form__input-wrap--space-between">
                  <div class="form__input-label">
                    <label class="form__input-text hide">{{'front.pamphlet.name_last'|trans}}</label>
                    <input class="form__input small" type="text" name="name" placeholder={{'front.pamphlet.name_last_ph'|trans}}>
                  </div>
                  <div class="form__input-label">
                    <label class="form__input-text hide">{{'front.pamphlet.name_first'|trans}}</label>
                    <input class="form__input small" type="text" name="name" placeholder={{'front.pamphlet.name_first_ph'|trans}}>
                  </div>
                </div>
              </div>
              <div class="form__item">
                <div class="form__label"> 
                  <label class="form__label-text">{{'front.pamphlet.name_kana'|trans}}</label><span class="form__label-req">{{"front.pamphlet.req"|trans}}</span>
                </div>
                <div class="form__input-wrap form__input-wrap--space-between"> 
                  <div class="form__input-label">
                    <label class="form__input-text hide">{{'front.pamphlet.name_last_kana'|trans}}</label>
                    <input class="form__input small" type="text" name="name" placeholder={{'front.pamphlet.name_last_kana_ph'|trans}}>
                  </div>
                  <div class="form__input-label">
                    <label class="form__input-text hide">{{'front.pamphlet.name_first_kana'|trans}}</label>
                    <input class="form__input small" type="text" name="name" placeholder={{'front.pamphlet.name_first_kana_ph'|trans}}>
                  </div>
                </div>
              </div>
              <div class="form__item"> 
                <div class="form__label"> 
                  <label class="form__label-text">{{'front.pamphlet.zip'|trans}}</label><span class="form__label-req">{{"front.pamphlet.req"|trans}}</span>
                </div>
                <div class="form__input-wrap form__input-wrap--row">
                  <input class="form__input postal" type="number" name="postal" placeholder={{'front.pamphlet.zip_ph'|trans}}>
                  <div class="form__button-zip hide">{{'front.pamphlet.zip_fill'|trans}}</div>
                </div>
              </div>
              <div class="form__item">
                <div class="form__label form__label--height">
                  <label class="form__label-text">{{'front.pamphlet.address'|trans}}</label><span class="form__label-req">{{"front.pamphlet.req"|trans}}</span>
                </div>
                <div class="form__input-wrap form__input-wrap--column">
                  <select class="form__input prefecture" name="prefecture"> 
                    <option class="form__option" value="" selected="selected" readonly="true" hidden="true" disabled="">{{'front.pamphlet.address_prf_ph'|trans}}</option>
                    <option class="form__option" value="都道府県">{{'front.pamphlet.address_prf_item01'|trans}}</option>
                  </select><br>
                  <input class="form__input address" type="text" name="municipality" placeholder={{'front.pamphlet.adress_city_ph'|trans}}><br>
                  <input class="form__input address" type="text" name="address" placeholder={{'front.pamphlet.adress_num_ph'|trans}}>
                </div>
              </div>
              <div class="form__item">
                <div class="form__label form__label">
                  <label class="form__label-text">{{'front.pamphlet.phone_num'|trans}}</label><span class="form__label-req">{{"front.pamphlet.req"|trans}}</span>
                </div>
                <div class="form__input-wrap">
                  <input class="form__input number" type="text" name="name" placeholder={{'front.pamphlet.phone_num_ph'|trans}}>
                </div>
              </div>
              <div class="form__item">
                <div class="form__label form__label">
                  <label class="form__label-text">{{'front.pamphlet.email'|trans}}</label><span class="form__label-req">{{"front.pamphlet.req"|trans}}</span>
                </div>
                <div class="form__input-wrap">
                  <input class="form__input number" type="text" name="name" placeholder={{'front.pamphlet.email_ph'|trans}}>
                </div>
              </div>
              <div class="form__item">
                <div class="form__label form__label--height">
                  <label class="form__label-text">{{"front.pamphlet.other"|trans}}</label><span class="form__label-req any">任意</span>
                </div>
                <div class="form__input-wrap">
                  <textarea class="form__textarea" name="message" cols="30" rows="10" placeholder={{"front.pamphlet.other_ph"|trans}}></textarea>
                </div>
              </div>
            </div>
            <div class="form__button">
              <button class="button__pamphlet">{{"front.pamphlet.to_check"|trans}}</button>
            </div>
          </form>
        </div>
      </section>

{% endblock %}